<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="30dp"
    android:orientation="vertical"
    android:gravity="center|top">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_expense"
        android:textSize="30sp"
        android:layout_margin="30dp"/>

    <EditText
        android:id="@+id/etext_name_fragment_expense"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_margin="20dp"
        android:layout_gravity="start"
        android:hint="@string/hint_name"/>

    <EditText
        android:id="@+id/etext_price_fragment_expense"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_margin="20dp"
        android:layout_gravity="start"
        android:inputType="number"
        android:hint="@string/hint_expense_price"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:orientation="horizontal">
        <Spinner
            android:id="@+id/spinner_fragment_expense"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginStart="20dp"
            android:layout_gravity="start|center"/>

        <ImageButton
            android:id="@+id/btn_add_fragment_expense"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_margin="25dp"
            android:layout_gravity="end|center"
            android:src="@drawable/add_button"/>
    </LinearLayout>


</LinearLayout>